<div class="row">
  <div class="col-md-12">
    <br>
    <h2>Students</h2>
    <hr />
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Course Code</th>
                            <th>Course Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each course}}
                            <tr>
                                <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                                <td>{{this.courseDescription}}</td>
                                {{course}}
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
    </div>
    {{#unless courses}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>